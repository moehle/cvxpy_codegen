{% import "utils/utils.c.jinja" as u with context %}


{% macro multiply_declare() %}
void multiply(CsrMatrix *A, CsrMatrix *B, CsrMatrix *Z,
              long *w, double *x);
{% endmacro %}


{% macro multiply_define() %}
void multiply(CsrMatrix *A, CsrMatrix *B, CsrMatrix *Z,
              long *w, double *x){
  long i, j, p, p2, q=0, m=Z->m;

  Z->p[0] = 0;
  for(i=0; i<m; i++){
    Z->p[i+1] = Z->p[i];
    p2 = A->p[i+1];
    for(p=A->p[i]; p<p2; p++){
      j = A->j[p];
      w[j] = i+1;
      x[j] = A->x[p];
    }
    p2 = B->p[i+1];
    for(p=B->p[i]; p<p2; p++){
      j = B->j[p];
      if(w[j] == i+1){
        Z->x[q] = x[j] * B->x[p];
        Z->j[q++] = j;
        Z->p[i+1]++;
      }
    }
  }
}
{% endmacro %}


{% macro multiply_eval(expr) %}
multiply(&work->{{ expr.args[0].storage.name }},
         &work->{{ expr.args[1].storage.name }},
         &work->{{ expr.storage.name }},
         work->work_int, work->work_double);
{% endmacro %}
