{% import "utils/utils.c.jinja" as u with context %}


{% macro abs_declare() -%}
void absatom(long nnz, double *Ax);
{%- endmacro %}


{% macro abs_define() %}
void absatom(long nnz, double *Ax){
  long p;
  double x;
  for(p=0; p<nnz; p++){
    x = Ax[p];
    Ax[p] = x>0 ? x : -x;
    printf("Ax[%ld] = %f\n", p, Ax[p]);
  }
}
{% endmacro %}


{% macro abs_eval(expr) %}
absatom({{ expr.sparsity.nnz }}l,
{{- u.nzval(expr) }});
{% endmacro %}
